{
	"compilerOptions": {
		/* Language and Environment */
		"target": "es6",
		"lib": ["es6"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		/* Modules */
		"module": "commonjs",
		"rootDir": ".",
		"moduleResolution": "node",

		/* Emit */
		"sourceMap": true,
		"outDir": "./dist",

		/* Interop Constraints */
		"esModuleInterop": true,

		/* Type Checking */
		"strict": true,
		"strictPropertyInitialization": false
	}
}
